<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Unity Trust — Dashboard</title>

  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            navy: '#0b1834',
            mid: '#071a38',
            deep: '#04122a',
            accentA: '#3ddcff',
            accentB: '#0a84ff'
          }
        }
      }
    }
  </script>

  <style>
    .glass {
      background: linear-gradient(180deg, rgba(255,255,255,.10), rgba(255,255,255,.03));
      backdrop-filter: blur(14px);
      border: 1px solid rgba(255,255,255,.08);
    }
  </style>
</head>

<body class="bg-gradient-to-b from-navy via-mid to-deep text-slate-100 min-h-screen">

  <!-- HEADER -->
  <header class="border-b border-white/10">
    <div class="max-w-7xl mx-auto px-6 py-5 flex justify-between items-center">
      <div>
        <h1 class="text-xl font-semibold tracking-wide">Unity Trust</h1>
      </div>
      <div class="flex items-center gap-3">
        <span class="text-sm text-slate-300">Welcome, <strong>Damisa</strong></span>
        <img src="/logo.jpeg" class="h-9 w-9 rounded-full border border-white/20">
      </div>
    </div>
  </header>

  <main class="max-w-7xl mx-auto px-6 py-10 space-y-10">

    <!-- BALANCE CARD (very close to screenshot) -->
    <div class="glass rounded-2xl p-6 relative overflow-hidden">
      <p class="text-xs tracking-widest text-slate-400 uppercase">SAVINGS</p>
      <h3 class="text-5xl md:text-6xl font-bold mt-3 tracking-tight">$219,624.00</h3>

      <div class="mt-5 space-y-1 text-xs">
        <p class="text-slate-400">ACCOUNT NUMBER</p>
        <p class="tracking-widest text-slate-200 font-medium">•••• 7158</p>
      </div>

      <div class="grid grid-cols-2 gap-6 mt-8 text-xs">
        <div>
          <p class="text-slate-400 tracking-widest uppercase">TOTAL CREDIT<br>JAN 2025</p>
          <p class="text-slate-200 mt-1 font-medium">$0.00</p>
        </div>
        <div>
          <p class="text-slate-400 tracking-widest uppercase">TOTAL DEBIT<br>JAN 2025</p>
          <p class="text-slate-200 mt-1 font-medium">$0.00</p>
        </div>
      </div>
    </div>

    <!-- STATEMENT SECTION -->
    <div class="glass rounded-2xl overflow-hidden">
      <div class="p-6 border-b border-white/10">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-lg font-semibold">Savings Statement</h3>
            <p class="text-sm text-slate-400 mt-1">
              Savings Account Statement #001185707158
            </p>
          </div>
          <button class="w-12 h-12 rounded-full bg-gradient-to-br from-accentA/30 to-accentB/30 flex items-center justify-center hover:from-accentA/50 hover:to-accentB/50 transition">
            <span class="text-2xl">▶</span>
          </button>
        </div>
      </div>

      <!-- TRANSACTION TABLE -->
      <div class="p-6">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
          <div class="text-sm text-slate-300">
            Show 
            <select class="bg-slate-800 border border-white/20 rounded px-2 py-1 text-sm">
              <option>10</option>
              <option>25</option>
              <option>50</option>
            </select> 
            entries
          </div>
          <div>
            <input type="text" placeholder="Search..." class="bg-slate-800/70 border border-white/10 rounded-lg px-4 py-2 text-sm focus:outline-none focus:border-accentA/50 w-48" />
          </div>
        </div>

        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead class="text-slate-400 border-b border-white/10">
              <tr>
                <th class="py-4 text-left font-normal">Date</th>
                <th class="py-4 text-left font-normal">Type</th>
                <th class="py-4 text-left font-normal">Amount</th>
                <th class="py-4 w-10"></th>
              </tr>
            </thead>
            <tbody class="divide-y divide-white/5">

              <!-- Example expandable row -->
              <tr class="group hover:bg-white/5 transition">
                <td class="py-4">25th November, 2025</td>
                <td class="py-4 text-red-400">Debit</td>
                <td class="py-4 font-medium">$15,367.00</td>
                <td class="py-4">
                  <button 
                    onclick="this.closest('tr').nextElementSibling.classList.toggle('hidden'); this.querySelector('span').textContent = this.closest('tr').nextElementSibling.classList.contains('hidden') ? '+' : '−';"
                    class="w-8 h-8 rounded-full bg-blue-600/30 hover:bg-blue-600/50 flex items-center justify-center text-lg font-bold transition">
                    <span>+</span>
                  </button>
                </td>
              </tr>
              <tr class="hidden bg-slate-900/40">
                <td colspan="4" class="p-5 text-slate-300 text-sm">
                  <div class="space-y-2">
                    <p><strong>Reference:</strong> TRX-20251125-8472</p>
                    <p><strong>Description:</strong> Transfer to investment account</p>
                    <p><strong>Balance after transaction:</strong> $204,257.00</p>
                    <p><strong>Time:</strong> 14:32 WAT</p>
                    <!-- You can add more fields, receipt link, etc. -->
                  </div>
                </td>
              </tr>

              <!-- Repeat pattern for more rows -->
              <tr class="group hover:bg-white/5 transition">
                <td class="py-4">18th November, 2025</td>
                <td class="py-4 text-red-400">Debit</td>
                <td class="py-4 font-medium">$8,420.50</td>
                <td class="py-4">
                  <button 
                    onclick="this.closest('tr').nextElementSibling.classList.toggle('hidden'); this.querySelector('span').textContent = this.closest('tr').nextElementSibling.classList.contains('hidden') ? '+' : '−';"
                    class="w-8 h-8 rounded-full bg-blue-600/30 hover:bg-blue-600/50 flex items-center justify-center text-lg font-bold transition">
                    <span>+</span>
                  </button>
                </td>
              </tr>
              <tr class="hidden bg-slate-900/40">
                <td colspan="4" class="p-5 text-slate-300 text-sm">
                  More details here...
                </td>
              </tr>

              <!-- Add more rows as needed -->

            </tbody>
          </table>
        </div>

        <!-- Simple pagination (you can enhance later) -->
        <div class="mt-6 flex justify-between items-center text-sm text-slate-400">
          <span>Showing 1 to 10 of 45 entries</span>
          <div class="flex gap-2">
            <button class="px-3 py-1 bg-white/5 rounded hover:bg-white/10">Previous</button>
            <button class="px-3 py-1 bg-white/5 rounded hover:bg-white/10">Next</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Keep your deposit / withdraw forms here if needed -->

  </main>

  <footer class="text-center text-xs text-slate-500 py-8">
    © 2025 Unity Trust — All rights reserved
  </footer>

</body>
</html>
