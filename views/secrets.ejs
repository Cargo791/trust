<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>Unity Trust — Dashboard</title>

<script src="https://cdn.tailwindcss.com"></script>

<script>
tailwind.config = {
  theme: {
    extend: {
      colors: {
        navy:'#0b1834',
        mid:'#071a38',
        deep:'#04122a',
        accentA:'#3ddcff',
        accentB:'#0a84ff'
      }
    }
  }
}
</script>

<style>
.glass {
  background: linear-gradient(180deg, rgba(255,255,255,.10), rgba(255,255,255,.03));
  backdrop-filter: blur(14px);
  border: 1px solid rgba(255,255,255,.08);
}
</style>
</head>

<body class="bg-gradient-to-b from-navy via-mid to-deep text-slate-100 min-h-screen">

<!-- HEADER -->
<header class="border-b border-white/10">
  <div class="max-w-7xl mx-auto px-6 py-5 flex justify-between items-center">
    <div>
      <h1 class="text-xl font-semibold tracking-wide">Unity Trust</h1>
      <p class="text-xs text-slate-400">Private Investment Dashboard</p>
    </div>
    <div class="flex items-center gap-3">
      <span class="text-sm text-slate-300">Welcome, <strong><%= name %></strong></span>
      <img src="/logo.jpeg" class="h-9 w-9 rounded-full border border-white/20">
    </div>
  </div>
</header>

<main class="max-w-7xl mx-auto px-6 py-10 space-y-10">

  <!-- BALANCE CARDS -->
<div class="glass rounded-2xl p-6 relative overflow-hidden">
  <p class="text-xs tracking-widest text-slate-400">SAVINGS</p>

  <h3 class="text-4xl font-bold mt-2">$219,624.00</h3>

  <div class="mt-4 space-y-1 text-xs text-slate-400">
    <p>ACCOUNT NUMBER</p>
    <p class="tracking-widest text-slate-200">•••• 7158</p>
  </div>

  <div class="grid grid-cols-2 gap-6 mt-6 text-xs">
    <div>
      <p class="text-slate-400 tracking-widest">TOTAL CREDIT<br>FEB 2026</p>
      <p class="text-slate-200 mt-1">$0.00</p>
    </div>

    <div>
      <p class="text-slate-400 tracking-widest">TOTAL DEBIT<br>JAN 2025</p>
      <p class="text-slate-200 mt-1">$0.00</p>
    </div>
  </div>
    <div class="glass rounded-2xl p-6">
      <p class="text-xs text-slate-400">Account Type</p>
      <h3 class="text-xl font-semibold mt-2">Savings •••• 942</h3>
    </div>

    <div class="glass rounded-2xl p-6">
      <p class="text-xs text-slate-400">Account Status</p>
      <h3 class="text-xl font-semibold text-emerald-400 mt-2">Active</h3>
    </div>
</div>

 

  </div>

  <!-- FORMS -->
  <div class="grid grid-cols-1 xl:grid-cols-3 gap-8">

    <!-- DEPOSIT -->
    <div class="xl:col-span-2 glass rounded-2xl p-8 space-y-5">
      <h3 class="text-lg font-semibold">Deposit Funds</h3>
      <input type="number" placeholder="Enter amount (USD)"
        class="w-full p-3 rounded-lg bg-slate-900/70 border border-white/10 focus:outline-none focus:ring-1 focus:ring-accentA" />

      <button class="w-full py-3 rounded-lg bg-gradient-to-r from-accentA to-accentB text-black font-semibold">
        Submit Deposit
      </button>

      <p class="text-xs text-yellow-400">Deposits require admin confirmation</p>
    </div>

    <!-- WITHDRAW -->
    <div class="glass rounded-2xl p-8 space-y-5">
      <h3 class="text-lg font-semibold">Withdraw</h3>
      <input type="text" placeholder="Bank Name"
        class="w-full p-3 rounded-lg bg-slate-900/70 border border-white/10" />
      <input type="number" placeholder="Amount (USD)"
        class="w-full p-3 rounded-lg bg-slate-900/70 border border-white/10" />
      <input type="number" placeholder="Account Number"
        class="w-full p-3 rounded-lg bg-slate-900/70 border border-white/10" />

      <button class="w-full py-3 rounded-lg bg-gradient-to-r from-accentA to-accentB text-black font-semibold">
        Withdraw Funds
      </button>
    </div>

  </div>

  <!-- TRANSACTIONS -->
  <div class="glass rounded-2xl p-8">
    <h3 class="text-lg font-semibold mb-6">Transaction History</h3>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="text-slate-400 border-b border-white/10">
          <tr>
            <th class="py-3 text-left">Type</th>
            <th class="py-3 text-left">Amount</th>
            <th class="py-3 text-left">Status</th>
            <th class="py-3 text-left">Date</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">

          <tr>
